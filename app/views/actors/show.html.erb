<center>
<h1 class="smcap"><%= @actor.name %></h1>

<div class="box">
  <h2>Movies</h2>
  
    <% @actor.movies.each do |role| %>
    <h3 class="list">
      <%= link_to "#{role.title} (#{role.year})", movie_path(role) %>
      <%= button_to "X", remove_movie_path(@actor, role), :method => :delete, :class=>" leftmar btn btn-danger btn-large" %>
    </h3>
    <% end %>
  
  <% unless @movies.empty? %>
    <%= form_tag add_movie_path do |f|%>
      <%= collection_select :movie, :id, @movies, :id, :title %>
      <%= submit_tag "Add", :class=>" leftmar btn btn-success btn-large" %>
    <% end %>
  <% end %>
</div>
<div class="tpmar">
<%= link_to "Edit", edit_actor_path(@actor), :class=>" leftmar btn btn-warning btn-large" %>
<%= button_to "Delete", actor_path(@actor), :method => :delete, :class=>" btn btn-danger btn-large" %>
<br><br>

<%= link_to "Back to actors", actors_path, :class=>" botmarsm btn btn-primary btn-large" %>

<!--  FOR COMMENTS -->
<div class="combox">
<h2> Comments:</h2>
<center>
<table class="right pad table table-bordered table-hover">
<thead>
  <tr class="info">
    <th>comment</th>
    <th>updated</th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @comments.each do |comment| %>
  <tr>
  <h4>
    <td><%= comment.content %></td>
    <td><%= time_ago_in_words comment.created_at  %></td> 
    <td><%= button_to "X", actor_remove_path(@actor, comment), :method => :delete, :class=>" btn btn-danger btn-large" %></td>
  </h4>

  </tr>

  <% end %>
</tbody>
</table>
</center>
</div>


<h2>New Comment</h2>
<%= form_for :comment, url: actor_comments_path(@actor)  do |comm| %>
      
    <%= comm.text_area :content, :rows => 5, :cols => 30%>
    <br>
    <%= submit_tag "Add comment", :class=>" botmar btn btn-success btn-large" %>
  
<% end %>








</center>
</div>