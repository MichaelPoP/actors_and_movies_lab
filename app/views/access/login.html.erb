
<center>
<h1 class="title">DBMI Login</h1>
<h3 class="title"></h3>
</center>
<center>
<div class="login">
<%= form_tag(login_path) do %>

  <%= label_tag(:username)%>
  <%= text_field_tag(:username, params[:username], autofocus: true)%>

<br>
  <%= label_tag(:password)%>
  <%= password_field_tag(:password)%>
  <br>

  <%= submit_tag("Log in", :class=>"btn btn-primary btn-large") %>

<% end %>
<h3 class="need">
<%= link_to "Need an account? Sign up here", signup_path%>
</h3>
</center>
</div>
